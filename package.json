{
  "name": "devcon-api",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "tsc && NODE_PATH=./dist node ./dist/index",
    "dev": "nodemon ./src/index.ts",
    "test": "NODE_ENV=test jest --detectOpenHandles --watchAll --no-cache",
    "test:coverage": "NODE_ENV=test jest --coverage --detectOpenHandles --no-cache",
    "lint": "eslint --fix",
    "prettier": "prettier './src' --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src": [
      "lint",
      "prettier"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "./src",
    "coverageDirectory": "../coverage",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "dependencies": {
    "@ethersproject/providers": "^5.7.1",
    "chrome-aws-lambda": "^6.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "ethereum-blockies-base64": "^1.0.2",
    "express": "^4.18.2",
    "handlebars": "^4.7.7",
    "helmet": "^6.0.1",
    "puppeteer": "^19.5.2",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.15",
    "@types/handlebars": "^4.1.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/puppeteer": "^7.0.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.0.2",
    "eslint": "8.23.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  }
}
